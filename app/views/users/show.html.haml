.container.user-page
  %header.user-nav
    .media
      .media-left
        = link_to user_path(@user.id) do
          %img.media-object{:alt => "64x64", "data-holder-rendered" => "true", "data-src" => "holder.js/64x64", :src => "#{@user.avatar}", :style => "width: 64px; height: 64px;"}/
      .media-body
        %h4#top-aligned-media.media-heading
          Top aligned media
          %span.label.label-default.project-number
            = @protos.length
            %i Projects
        .proto-user
          %span.degree
            = @user.group
        .row
          .col-md-6
            %h4 Profile
            %p
              = @user.profile
          .col-md-6
            %h4 Works
            %p
              = @user.works
= render partial: 'top/index'