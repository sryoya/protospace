.container
  .form-signin
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| 
      %h2.form-signin-heading Please sign in
      .sr-only{:for => "inputEmail"} Email address
      #inputEmail.form-control
        = f.email_field :email, autofocus: true, required: "", placeholder: "Email address"
      .sr-only{:for => "inputPassword"} Password
      #inputPassword.form-control
        = f.password_field :password, autocomplete: "off", required: "",placeholder: "Password"
      - if devise_mapping.rememberable?
        .checkbox
          %label
            = f.check_box :remember_me, value: "remember-me", placeholder: "Remember me"
            = f.label :remember_me
      = f.submit class: "btn btn-lg btn-primary btn-block", placeholder: "Sign in"
    .text-center
      %p
        Not a member?
        = link_to 'Sign up now', new_user_registration_path