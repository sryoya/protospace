.container
  .form-signin
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| 
      %h2.form-signin-heading Please sign in
      %label.sr-only{for: "inputEmail"} Email address
      = f.email_field :email, autofocus: true, required: "", placeholder: "Email address", id: "inputEmail", class: "form-control"
      %label.sr-only{for: "inputPassword"} Password
      = f.password_field :password, autocomplete: "off", required: "", placeholder: "Password", id: "inputPassword", class: "form-control"
      - if devise_mapping.rememberable?
        .checkbox
          %label
            = f.check_box :remember_me, value: "remember-me", placeholder: "Remember me"
            = f.label :remember_me
      = f.submit class: "btn btn-lg btn-primary btn-block", value: "Sign in"
    .text-center
      %p
        Not a member?
        = link_to 'Sign up now', new_user_registration_path