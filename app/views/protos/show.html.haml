.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          %a{:href => "#"}
            %img.media-object{:alt => "64x64", "data-holder-rendered" => "true", "data-src" => "holder.js/64x64", :src => "#{@user.avatar}", :style => "width: 64px; height: 64px;"}/
        .media-body
          %h4#top-aligned-media.media-heading
            = @proto.title
          .proto-user
            %a{:href => ""}
              by #{@user.name}
            %span.degree
              = @user.group
              = @user.works
    .col-md-6.text-right
      %button.btn.btn-default
        = image_tag("icon_heart.svg")
        Like
        %span.num 20
  .row
    .col-md-9
      = image_tag("#{@main_image.image}", :class => 'img-responsive')
    .col-md-3
      %ul.proto-sub-list.list-group
        - @sub_images.each do |sub_image|
          %li.list-group-item
            = image_tag("#{sub_image.image}", :class => 'img-responsive')
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p
        = @proto.catch_copy
    .col-md-6
      %h4 Concept
      %p
        = @proto.concept
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        - @tags.each do |tag|
          %li 
            %a{:href => "#", :class => "btn btn-default"}
              = tag
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num
        (#{@comments.length})
    .comments
      = render @comments
    = form_for(@comment, remote: true, html: {class: "form-inline", role: "form"}) do |f|
      = f.hidden_field :proto_id, value: "#{@proto.id}"
      .row
        %h4 Write a comment
        .form-group.col-md-10
          = f.text_area :comment, class: "form-control", id: "comment", placeholder: "Your comments", rows: "3"
        .form-group.col-md-2
          = f.button placeholder: "Comment", class: "btn btn-primary"
            