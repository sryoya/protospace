- if @like.present?
  = link_to proto_like_path("#{@proto.id}", "#{@like.first.id}"), method: :delete, remote: true, class: "col-md-6 text-right" do
    %button.btn.btn-default
      = image_tag("icon_heart(red).svg")
      Like
      %span.num
        = @likes.length
- elsif user_signed_in?
  = link_to proto_likes_path("#{@proto.id}"), method: :post, remote: true, class: "col-md-6 text-right" do
    %button.btn.btn-default
      = image_tag("icon_heart.svg")
      Like
      %span.num
        = @likes.length
- else
  = link_to new_user_session_path, method: :post, class: "col-md-6 text-right" do
    %button.btn.btn-default
      = image_tag("icon_heart.svg")
      Like
      %span.num
        = @likes.length